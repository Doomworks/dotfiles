[colors]
1 = #3a3335
2 = #30343f
3 = #fafaff
4 = #e8dab2
5 = #eb5e55
6 = #f5cd00
7 = #29f500
8 = #00a5a5
9 = #1b1918

[global/wm]
margin-top = 2
margin-bottom = 2

[settings]
throttle-output = 5
throttle-output-for = 10

throttle-input-for = 30

screenchange-reload = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/top]
;monitor = ${env:MONITOR}
monitor-strict = true
dpi =  96
bottom = false
width = 100%
height = 25
background = ${colors.9}
foreground = ${colors.3}

spacing = 1
padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1

border-top-size = 0
border-bottom-size = 0

font-0 = ProggyCleanTTSZBP:anitalias=false:size=12;2
font-1 = FontAwesome:pixelsize=10;2

modules-left = i3
modules-center =
modules-right = cpu volume mail clock date

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true
;pin-workspaces = true


label-mode-padding = 1
label-mode-foreground = ${colors.4}
label-mode-background = ${colors.2}

label-focused = %icon%
label-focused-foreground = ${colors.4}
label-focused-background = ${colors.2}
label-focused-padding = 2

label-unfocused = %icon%
label-unfocused-padding = 2

label-visible = %icon% %name%
label-visible-padding = 2

label-urgent = %icon%
label-urgent-background = ${colors.5}
label-urgent-padding = 2

ws-icon-0 = 1;1
ws-icon-1 = 2;2
ws-icon-2 = 3;3
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;10

[module/clock]
type = custom/script
interval = 1
exec = $HOME/scripts/clock

[module/date]
type = custom/script
interval = 1
exec =  bash $HOME/.afiur -sd 1994-11-03

[module/volume]
type = internal/volume

label-volume = %percentage%%
label-volume-forground = ${colors.3}
format-volume = <ramp-volume><label-volume>

label-muted = 
format-muted-padding = 1

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/mail]
type = custom/script
exec = python3 $HOME/scripts/chkmail
interval = 5
click-left = xdg-open https://mail.hover.com

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

full-at = 96
label-full = 
label-full-foreground = ${colors.6}

format-charging = <animation-charging><label-charging>
animation-charging-0 = 
animation-charging-0-foreground = ${colors.6}
animation-charging-1 = 
animation-charging-framerate = 700

format-discharging = <ramp-capacity><label-discharging>
ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.5}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.5}
ramp-capacity-2 = 
ramp-capacity-2-foreground = ${colors.6}
ramp-capacity-3 = 
ramp-capacity-3-foreground = ${colors.7}
ramp-capacity-4 = 
ramp-capacity-4-foreground = ${colors.7}

[bar/bottom]
monitor-strict = true
dpi =  96
bottom = true
width = 100%
height = 18
background = ${colors.9}
foreground = ${colors.3}

spacing = 1
padding-left = 1
padding-right = 2
module-margin-left = 1
module-margin-right = 2

font-0 = ProggyCleanTTSZBP:anitalias=false:size=12;2
font-1 = FontAwesome:pixelsize=10;2

modules-left = battery
modules-center = cmus-status
modules-right = fshome
tray-position = right


[module/cmus-status]
type = custom/script
exec = $HOME/scripts/cmus-status.sh
exec-if = cmus-remote -Q
interval = 0.5
scroll-up = cmus-remote -n
scroll-down = cmus-remote -r
click-left = ~/scripts/cmus-status.sh --toggle
format-prefix = ""

[module/fshome]
type = internal/fs
mount-0 = /
;mount-1 = /home
interval = 10
format-mounted = <label-mounted>
format-unmounted = <label-unmounted>
label-mounted = " %percentage_used%%/%total%"
label-unmounted = " Something has gone very wrong"
label-unmounted-forground = ${colors.5}

[module/ip]
type = custom/script
exec = $HOME/scripts/ip
interval = 30
format-prefix = " "

[module/publicip]
type = custom/script
exec = wget -qO- ipinfo.io/ip
interval = 1000
format-prefix = " "

[module/pkgupdates]
type = custom/script
exec = $HOME/scripts/pkgupdates
interval = 10
click-left = bash $HOME/scripts/pkgupdates

vim:ft=dosini
