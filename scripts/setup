# Setup config files
ln -s $HOME/dotfiles/env/.zshrc $HOME/.zshrc
ln -s $HOME/dotfiles/env/.pam_environment $HOME/.pam_environment
ln -s $HOME/dotfiles/env/.emacs $HOME/.emacs
ln -s $HOME/dotfiles/env/.xinitrc $HOME/.xinitrc
ln -s $HOME/dotfiles/env/.Xdefaults $HOME/.Xdefaults

# Symlinks to .config
mkdir $HOME/.config/polybar && ln -s $HOME/dotfiles/polybar/config $HOME/.config/polybar/config
mkdir $HOME/.config/i3 && ln -s $HOME/dotfiles/i3/config $HOME/.config/i3/config
mkdir $HOME/.config/dunst && ln -s $HOME/dotfiles/dunst/dunstrc $HOME/.config/dunst/dunstrc
